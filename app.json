        "large": "assets/images/large.jpg",
        "small": "assets/images/small.jpg"
      },
      "speech": [],
      "drivers": [
        {
          "id": "LTW012",
          "name": {
            "en": "LTW012 6W B39 E14",
            "nl": "LTW012 6W B39 E14"
          },
          "class": "light",
          "capabilities": [
            "onoff",
            "dim",
            "light_temperature"
          ],
